root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_size = 4
indent_style = space

[*.toml]
indent_size = 2
indent_style = space

[*.scm]
indent_style = space
indent_size = 2
